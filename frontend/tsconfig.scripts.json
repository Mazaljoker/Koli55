{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./dist/scripts"
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules", ".next"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020"
    }
  }
}
